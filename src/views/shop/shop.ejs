<%- include('../partials/header'); -%>

<div class="shopcontainer container">

    <aside  class="asidefilter">
        <!-- <form action=""> -->
            <label class="asidefilter__tags" for="">BUSCAR</label>
            <input id="search-textinput" class="asidefilter__textinput" type="text" placeholder="Nombre o Categoria">
            
            <label class="asidefilter__tags" for="">ORDENAR POR</label>
            <select class="asidefilter__select selectempty" name="order" id="order">
                <option value="opc1">Mayor a Menor</option>
                <option value="opc2">Menor a Mayor</option>
            </select>
            
            <label class="asidefilter__tags" for="">PRECIO</label>
            <span class="asidefilter__tagsMM">MIN</span>
            <input class="asidefilter__textinputMM" type="text" placeholder="0">
            <span class="asidefilter__tagsMM">- MAX</span>
            <input class="asidefilter__textinputMM" type="text" placeholder="0">
            
            <label class="asidefilter__tags" for="">FILTRAR</label>
            <p class="asidefilter__checkoptions"><input class="asidefilter_checkbox" type="checkbox">NUEVOS</p>
            <p class="asidefilter__checkoptions"><input class="asidefilter_checkbox" type="checkbox">OFERTAS</p>
            <p class="asidefilter__checkoptions"><input class="asidefilter_checkbox" type="checkbox">EDICION ESPECIAL</p>
            <p class="asidefilter__checkoptions"><input class="asidefilter_checkbox" type="checkbox">FAVORITOS</p>
        <!-- </form> -->
    </aside> 


    <main class="main__articles">
        <section>

            <ul id="shop-items-list" class="card__container">
           
                <% if (dataRecibida.length > 0){ %>

                        <% dataRecibida.forEach(productoRecibido => { %>
                            <li class="slider__card">
                                <article class="card__container">
                                    <a class="card__link" href="/shop/item/<%= productoRecibido.prod_id%>">
                                            <picture class="card__imagecontainer">
                                                <% if (productoRecibido.prod_nuevo == true){ %><span class="card__newprod">NUEVO</span><% } %>
                                                <img class="card__prodimage" src="<%= productoRecibido.prod_imagen_frontal %>" alt="Producto StormTrooper">
                                                <img class="card__boximage" src="<%= productoRecibido.prod_imagen_trasera %>" alt="Caja StormTrooper">
                                            </picture>
                                            <div class="card__detailscontainer">
                                                <h3 class="card__prodfamily"><%= productoRecibido.prod_licencia %></h3>
                                                <h2 class="card__prodname"><%= productoRecibido.prod_nombre %></h2>
                                                <p class="card__prodprice">$&nbsp;<%= productoRecibido.prod_precio %></p>
                                                <p class="card__prodbill"><%= productoRecibido.prod_cuotas %><% if (productoRecibido.prod_intereses == true){ %> CUOTAS CON INTERÉS <% } else { %> CUOTAS SIN INTERÉS  <% } %></p>
                                            </div>
                                        </a>                                
                                </article>
                            </li>
                        <% }) %>

                <% } else { %>

                    <section style="border: 3px solid crimson; display: inline-block; padding: 30px; margin: 30px;">
                        <h3>La busqueda no encontro productos</h3>
                        <h3>Rellenar este mensaje, darle formato y estilo agradable con alguna imagen y poner boton que envie a SHOP donde se ven todos los productos</h3>
                    </section> 

                <% }; %>
        
