<%- include('../partials/header'); -%>


<section style="border: 3px solid crimson; display: inline-block; padding: 10px; margin: 10px;">
    <% dataParaVista.forEach(character => { %>
            <h3><%= character.prod_nombre %> &nbsp;&nbsp;(<%= character.prod_id %>) </h3>
            <b>
                <p><%= character.prod_licencia %></p>
                <p><%= character.prod_descripcion %></p>
                <p><%= character.prod_precio %></p>
            </b>
    <% }) %>
</section>


    <main class="container">
        <!-- Sección 1 - Cart principal -->
        <section class="collection container">
            <picture class="collection__cover">
                <img src="/images/star-wars/baby-yoda-1.webp"
                    alt="Figura coleccionable de Baby Yoda (Groku) - The Mandalorian Saga">
            </picture>
            <article class="collection__content">
                <p class="collection__text__superior">STAR WARS</p>
                <h3 class="collection__title">BABY YODA BLUEBALL</h3>
                <p class="collection__text">Figura coleccionable de Baby Yoda (Groku) - The Mandalorian
                    Saga, edición limitada.</p>
                <p class="collection__price">$1799,99</p>

                <form class="collection__form" action="">
                    <!-- <span>0</span> -->
                    <input class="collection__input" placeholder="0" type="number">
                    <div class="collection__form__buttons">
                        <iconify-icon icon="ic:sharp-add-box" style="color: #4f4f4f;" width="16" height="18"
                            flip="horizontal,vertical"></iconify-icon>
                        <iconify-icon icon="material-symbols:chips-sharp" style="color: #4f4f4f;" width="16" height="18"
                            flip="horizontal,vertical"></iconify-icon>

                        <!-- <a href=""></a> -->
                        <!-- <a href=""></a> -->
                    </div>
                    <button class="collection__button" type="submit">Agregar al carrito</button>
                </form>
                <p class="collection__text__inferior"><a class="collection__link_pago" href="#">Ver métodos de pago</a>
                    - 3 CUOTAS SIN INTERÉS</p>
            </article>
        </section>
        <!-- Sección 2 - Productos relacionados -->
        <section class="slider container">
            <h2 class="slider__title">PRODUCTOS RELACIONADOS</h2>
            <ul class="slider__items">
                <li class="slider__item">
                    <article class="card-item">
                        <span class="card-item__tag">NUEVO</span>
                        <a class="card-item__link" href="#">
                            <picture class="card-item__cover">
                                <img class="card-item__img--front" src="/images/star-wars/trooper-1.webp"
                                    alt="Figura coleccionable Funko de un Stormtroope">
                                <img class="card-item__img--back" src="/images/star-wars/trooper-box.webp"
                                    alt="Figura coleccionable Funko de un Stormtroope en caja">
                            </picture>
                            <div class="card-item__content">
                                <p class="card-item__license">STAR WARS</p>
                                <h3 class="card-item__name">STORMTROOPER LIGHTSABER</h3>
                                <p class="card-item__price">$ 1799,99</p>
                                <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                            </div>
                        </a>
                    </article>
                </li>
                <li class="slider__item">
                    <article class="card-item">
                        <span class="card-item__tag">NUEVO</span>
                        <a class="card-item__link" href="#">
                            <picture class="card-item__cover">
                                <img class="card-item__img--front" src="/images/pokemon/pidgeotto-1.webp"
                                    alt="Figura coleccionable Funko de un Pidgeotto">
                                <img class="card-item__img--back" src="/images/pokemon/pidgeotto-box.webp"
                                    alt="Figura coleccionable Funko de un Pidgeotto en caja">
                            </picture>
                            <div class="card-item__content">
                                <p class="card-item__license">POKEMON</p>
                                <h3 class="card-item__name">PIDGEOTTO</h3>
                                <p class="card-item__price">$ 1799,99</p>
                                <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                            </div>
                        </a>
                    </article>
                </li>
                <li class="slider__item">
                    <article class="card-item">
                        <div>
                            <span class="card-item__tag">NUEVO</span>
                            <a class="card-item__link" href="#">
                                <picture class="card-item__cover">
                                    <img class="card-item__img--front" src="/images/harry-potter/luna-1.webp"
                                        alt="Figura coleccionable Funko de Luna">
                                    <img class="card-item__img--back" src="/images/harry-potter/luna-box.webp"
                                        alt="Figura coleccionable Funko de Luna en caja">
                                </picture>
                        </div>
                        <div class="card-item__content">
                            <p class="card-item__license">HARRY POTTER</p>
                            <h3 class="card-item__name">LUNA LOVEGOOD LION MASK</h3>
                            <p class="card-item__price">$ 1799,99</p>
                            <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                        </div>
                        </a>
                    </article>
                </li>
            </ul>
        </section>
    </main>


<%- include('../partials/footer'); -%>


    <!-- Vinculacion con Libreria Iconify 1.0.7 -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>

</body>

</html>